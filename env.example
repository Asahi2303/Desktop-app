## React (Renderer) variables
# Supabase Configuration (client-side)
REACT_APP_SUPABASE_URL=
REACT_APP_SUPABASE_ANON_KEY=

# App name (optional, used in UI)
REACT_APP_APP_NAME=Jolly Children Academic Center
REACT_APP_API_URL=http://localhost:3001/api

## Electron (Main process) variables
# MongoDB connection (optional; app will still start without it)
ENABLE_MONGO=false
MONGODB_URI=mongodb://127.0.0.1:27017
MONGODB_DB=my_desktop_app

# Supabase Admin (required for sending invites from the desktop app)
# Do NOT prefix with REACT_APP_. These are used ONLY in Electron main.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_REDIRECT_TO=
